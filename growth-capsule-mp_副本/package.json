{
  "name": "growth-capsule-mp",
  "version": "1.0.0",
  "private": true,
  "description": "成长时间胶囊 - 微信小程序版本 (monorepo)",
  "scripts": {
    "dev:server": "pnpm --filter @growth-capsule/server dev",
    "build:server": "pnpm --filter @growth-capsule/server build",
    "dev:mp": "pnpm --filter @growth-capsule/miniprogram dev:weapp",
    "build:mp": "pnpm --filter @growth-capsule/miniprogram build:weapp",
    "build:shared": "pnpm --filter @growth-capsule/shared build",
    "build:all": "pnpm build:shared && pnpm build:server && pnpm build:mp",
    "db:push": "pnpm --filter @growth-capsule/server db:push",
    "db:studio": "pnpm --filter @growth-capsule/server db:studio"
  }
}
